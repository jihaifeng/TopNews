<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- style for MaterialRefreshLayout  -->
  <declare-styleable name="MaterialRefreshLayout">
    <attr format="boolean" name="overlay"/>
    <!-- style for MaterialWaveView  -->
    <attr format="enum" name="wave_height_type">
      <enum name="normal" value="0"/>
      <enum name="higher" value="1"/>
    </attr>
    <attr format="color" name="wave_color"/>
    <attr format="boolean" name="wave_show"/>
    <!-- style for CircleProgressBar  -->
    <attr format="reference" name="progress_colors"/>
    <attr format="dimension" name="progress_stoke_width"/>
    <attr format="color" name="progress_backgroud_color"/>
    <attr format="boolean" name="progress_show_arrow"/>
    <attr format="dimension" name="progress_arrow_width"/>
    <attr format="dimension" name="progress_arrow_height"/>
    <attr format="boolean" name="progress_show_circle_backgroud"/>
    <attr format="integer" name="progress_value"/>
    <attr format="integer" name="progress_max_value"/>
    <attr format="dimension" name="progress_text_size"/>
    <attr format="color" name="progress_text_color"/>
    <attr format="enum" name="progress_text_visibility">
      <enum name="visible" value="0"/>
      <enum name="invisible" value="1"/>
    </attr>
    <attr format="enum" name="progress_size_type">
      <enum name="normal" value="0"></enum>
      <enum name="big" value="1"></enum>
    </attr>
    <attr format="boolean" name="isLoadMore"></attr>
  </declare-styleable>
</resources>